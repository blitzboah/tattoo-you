{
  "manifest_version": 3,
  "name": "tattoo-you",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "main.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}

